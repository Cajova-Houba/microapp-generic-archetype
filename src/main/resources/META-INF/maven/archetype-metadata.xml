<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">
	
  <requiredProperties>
  
  	<!-- 
  	Name which makes the context configuration files unique.     
  	 -->
  	<requiredProperty key="microappName">
  		<defaultValue>microappName</defaultValue>
  	</requiredProperty>
  </requiredProperties>

  <modules>
  
	<!-- CORE MODULE -->
	<module dir="core" name="core">
		<fileSets>
			<fileSet filtered="true">
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.java</include>
				</includes>
			</fileSet>
			<fileSet filtered="true">
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</fileSet>
			<fileSet filtered="true">
				<directory>src/test/java</directory>
				<includes>
					<include>**/*.java</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/test/resources</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</fileSet>
		</fileSets>
	</module>
	
	<!-- MEMBERNET UTILS MODULE -->
	<module dir="membernet-utils" name="membernet-utils">
		<fileSets>
			<fileSet filtered="true">
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.java</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</fileSet>
			<fileSet filtered="true">
				<directory>src/test/java</directory>
				<includes>
					<include>**/*.java</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/test/resources</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</fileSet>
		</fileSets>
	</module>
	
	<!-- UI MODULE -->
	<module dir="ui" name="ui">
		<fileSets>
			<fileSet filtered="true">
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.java</include>
					<include>**/*.html</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/main/webapp</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
					<!-- logo and style-->
					<include>**/*.png</include>
					<include>**/*.css</include>
				</includes>
			</fileSet>
			<fileSet filtered="true">
				<directory>src/test/java</directory>
				<includes>
					<include>**/*.java</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/test/jetty</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</fileSet>
			<fileSet>
				<directory>src/test/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</fileSet>
		</fileSets>
	</module>
  </modules>

</archetype-descriptor>